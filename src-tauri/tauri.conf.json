{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pepino",
  "version": "1.0.0",
  "identifier": "io.lamars.pepino",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "minHeight": 800,
        "minWidth": 1000,
        "title": "Pepino",
        "width": 1200,
        "height": 800,
        "hiddenTitle": true,
        "resizable": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
